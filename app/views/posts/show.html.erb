<p id="notice"><%= notice %></p>
<%= content_tag :div, id: "post_show_content", class: "skinny_wrapper wrapper_padding" do %>
    <header>
        <p class="date"><%= @post.created_at.strftime('%A, %B, %d') %></p>
        <h1><%= @post.title %></h1>
        <hr>
    </header>

    <%= content_tag :div, id: "content" do %>
        <%= markdown @post.description %>
    <% end %>

    <hr>

    <% if user_signed_in? %>
        <div id="admin_links">
            <%= link_to "Edit Article", edit_post_path(@post) %>
            <%= link_to 'Back', posts_path %>
            <%= link_to "Delete Article", posts_path(@post), method: :delete, data: {confirm: "Are you sure?" } %>
        </div>
    <% end %>

    <%= content_tag :div, class: "share-box" do %>
        <p>Share The Do List</p>
        <a onclick="javascript:window.open('http:/twitter.com/share?text=<%= @post.title %> by @trillvenzini - &amp; url=<%= url_for([@post, {only_path: false}]) %>', '_blank', 'width=800', height=500, top=200, left=300');void(0);">
            <i class="fa fa-twitter"></i>
        </a>
    <% end %>

    <%= render 'disqus' %>
<% end %>
